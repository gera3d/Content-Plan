---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home', icon: null },
  { href: '/memes', label: 'Memes', icon: 'ðŸ˜‚' },
  { href: '/about', label: 'About', icon: null },
  { href: '/work', label: 'Work', icon: null },
  { href: '/contact', label: 'Contact', icon: null },
];
---

<header class="header">
  <div class="container header__inner">
    <a href="/" class="header__logo">Gera.Yerem<span class="header__logo-tld">.in</span><span class="header__logo-bubble" data-hover="Ready to go home?">Hi</span></a>
    <nav class="header__nav">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class:list={[
            'header__link',
            { 'header__link--active': currentPath === link.href || 
              (link.href !== '/' && currentPath.startsWith(link.href)) }
          ]}
        >
          {link.icon && <span class="header__link-icon">{link.icon}</span>}
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: var(--header-bg);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border-bottom: 1px solid var(--color-border);
    padding: 12px 0;
    transition: background 0.3s ease;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 44px; /* Apple standard nav height */
  }

  .header__logo {
    font-size: 19px;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    display: flex;
    align-items: center;
    position: relative;
    letter-spacing: -0.01em;
    line-height: 1; /* Fix vertical alignment */
  }

  .header__logo-tld {
    color: var(--color-text-tertiary);
    transition: color 0.2s ease;
  }

  .header__logo:hover .header__logo-tld {
    color: var(--color-text);
  }

  .header__logo-bubble {
    font-size: 10px;
    background: var(--accent-blue);
    color: white;
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 8px;
    opacity: 0;
    transform: translateY(4px);
    transition: all 0.2s ease;
    pointer-events: none;
    line-height: 1.2;
  }

  .header__logo:hover .header__logo-bubble {
    opacity: 1;
    transform: translateY(0);
  }

  .header__nav {
    display: flex;
    gap: 24px;
    align-items: center; /* Ensure items center */
  }

  .header__link {
    font-size: 13px; /* Slightly larger for readability */
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    font-weight: 500;
    line-height: 1; /* Fix vertical alignment */
  }

  .header__link:hover,
  .header__link--active {
    color: var(--color-text);
  }

  .header__link-icon {
    font-size: 13px;
    margin-right: 4px;
  }

  @media (max-width: 768px) {
    .header__nav {
      gap: 16px;
    }
    .header__link span:not(.header__link-icon) {
      /* Hide text on very small screens if needed, or keep simpler */
    }
  }
</style>
