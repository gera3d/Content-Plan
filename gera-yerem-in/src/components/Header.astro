---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Writing', icon: null },
  { href: '/memes', label: 'Memes', icon: 'ðŸ˜‚' },
  { href: '/about', label: 'About', icon: null },
  { href: '/work', label: 'Work', icon: null },
  { href: '/contact', label: 'Contact', icon: null },
];
---

<header class="header">
  <div class="container header__inner">
    <a href="/" class="header__logo">Gera.Yere<span class="header__logo-tld">.in</span><span class="header__logo-bubble" data-hover="Ready to go home?">Hi</span></a>
    <nav class="header__nav">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class:list={[
            'header__link',
            { 'header__link--active': currentPath === link.href || 
              (link.href !== '/' && currentPath.startsWith(link.href)) }
          ]}
        >
          {link.icon && <span class="header__link-icon">{link.icon}</span>}
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  .header__link-icon {
    font-size: 0.875rem;
    margin-right: 0.25rem;
  }
</style>
