<div class="mockup-integrations">
    <div class="feed-container">
        <!-- Feed Item 1: Stripe/Payment -->
        <div class="feed-item item--1">
            <div class="icon-box icon-payment">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                </svg>
            </div>
            <div class="content">
                <div class="row-primary">
                    <span class="title">Payment Received</span>
                    <span class="amount">+$500.00</span>
                </div>
                <div class="row-secondary">
                    <span class="source">Stripe</span>
                    <span class="time">Just now</span>
                </div>
            </div>
        </div>

        <!-- Feed Item 2: HubSpot/CRM -->
        <div class="feed-item item--2">
            <div class="icon-box icon-crm">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
            </div>
            <div class="content">
                <div class="row-primary">
                    <span class="title">New Lead Captured</span>
                </div>
                <div class="row-secondary">
                    <span class="source">HubSpot</span>
                    <span class="time">2m ago</span>
                </div>
            </div>
        </div>

        <!-- Feed Item 3: QuickBooks/Invoice -->
        <div class="feed-item item--3">
            <div class="icon-box icon-invoice">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
            </div>
            <div class="content">
                <div class="row-primary">
                    <span class="title">Invoice Generated</span>
                    <span class="status">Sent</span>
                </div>
                <div class="row-secondary">
                    <span class="source">QuickBooks</span>
                    <span class="time">5m ago</span>
                </div>
            </div>
        </div>
        
        <!-- Mask at bottom for fade out -->
        <div class="fade-mask"></div>
    </div>
</div>

<style>
    .mockup-integrations {
        width: 100%;
        height: 100%;
        min-height: 240px;
        background: linear-gradient(180deg, #1c1c1e 0%, #151516 100%);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

    .feed-container {
        display: flex;
        flex-direction: column;
        gap: 12px;
        position: relative;
        height: 100%;
    }

    .feed-item {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 12px;
        display: flex;
        align-items: center;
        gap: 12px;
        backdrop-filter: blur(4px);
        transform: translateY(0);
        transition: transform 0.3s ease, background 0.3s ease;
        animation: slideIn 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) backwards;
    }

    .feed-item:hover {
        background: rgba(255, 255, 255, 0.06);
        transform: scale(1.02);
        border-color: rgba(255, 255, 255, 0.15);
        z-index: 10;
    }

    /* Stagger Animations */
    .item--1 { animation-delay: 0.1s; }
    .item--2 { animation-delay: 0.3s; }
    .item--3 { animation-delay: 0.5s; opacity: 0.6; /* Slight fade for older items */ }

    .icon-box {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-payment { background: rgba(52, 211, 153, 0.15); color: #34d399; } /* Green */
    .icon-crm { background: rgba(251, 146, 60, 0.15); color: #fb923c; } /* Orange */
    .icon-invoice { background: rgba(96, 165, 250, 0.15); color: #60a5fa; } /* Blue */

    .content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
        min-width: 0; /* Text truncation support */
    }

    .row-primary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 13px;
        font-weight: 500;
        color: #fff;
    }

    .row-secondary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 11px;
        color: rgba(255, 255, 255, 0.5);
    }
    
    .amount { color: #34d399; font-weight: 600; }
    .status { 
        background: rgba(255,255,255,0.1); 
        padding: 2px 6px; 
        border-radius: 4px; 
        font-size: 10px;
    }

    .fade-mask {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60px;
        background: linear-gradient(to bottom, transparent, #151516);
        pointer-events: none;
    }

    @keyframes slideIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
