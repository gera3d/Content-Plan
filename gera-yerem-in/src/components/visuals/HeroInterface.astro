<script>
    const container = document.getElementById('hero-interface');
    const card = container.querySelector('.interface-container');

    // Subtle 3D Tilt Effect
    container.addEventListener('mousemove', (e) => {
        const { width, height, left, top } = container.getBoundingClientRect();
        const mouseX = e.clientX - left;
        const mouseY = e.clientY - top;
        
        // Calculate rotation (limited range for subtlety)
        const rotateX = ((mouseY / height) - 0.5) * -10; // -5 to +5 deg
        const rotateY = ((mouseX / width) - 0.5) * 10;   // -5 to +5 deg

        card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
    });

    // Reset on mouse leave
    container.addEventListener('mouseleave', () => {
        card.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg)`;
    });
</script>

