        border-radius: 0.5rem;
        transition: background 0.2s ease;
        cursor: default;
    }

    .stat-item:hover {
        background: rgba(99,102,241,0.04);
    }

    .stat-icon {
        font-size: 1.75rem;
        margin-bottom: 0.625rem;
        opacity: 0.9;
    }

    .stat-item:hover .stat-icon {
        opacity: 1;
    }

    .stat-number {
        display: block;
        font-size: 1rem;
        font-weight: 700;
        color: #4F46E5;
        line-height: 1.3;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        display: block;
        font-size: 0.8125rem;
        color: #475569;
        font-weight: 500;
        line-height: 1.4;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .stats-bar {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            max-width: 480px;
        }
    }

    @media (max-width: 520px) {
        .stats-bar {
            grid-template-columns: 1fr 1fr;
            padding: 1.25rem 1rem;
            gap: 0.5rem;
        }

        .stat-icon {
            font-size: 1.25rem;
        }

        .stat-number {
            font-size: 0.875rem;
        }

        .stat-label {
            font-size: 0.75rem;
        }
    }
