    /* Stats Bar - Pain Points */
    .stats-bar {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        padding: 2rem 2.5rem;
        background: rgba(255,255,255,0.92);
        backdrop-filter: blur(20px);
