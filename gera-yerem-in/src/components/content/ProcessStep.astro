---
interface Props {
  number: string;
  title: string;
  duration?: string;
}

const { number, title, duration } = Astro.props;
---

<div class="process-step">
  <div class="process-step__marker">
    {number}
  </div>
  <div class="process-step__body glass-card">
    <div class="process-step__header">
      <h3 class="process-step__title">{title}</h3>
      {duration && <span class="process-step__duration">{duration}</span>}
    </div>
    <div class="process-step__content">
      <slot />
    </div>
  </div>
</div>

<style>
  .process-step {
    display: flex;
    gap: 1.5rem;
    position: relative;
    margin-bottom: 2rem;
    z-index: 1; /* Above the timeline line */
  }
  
  .process-step:last-child {
    margin-bottom: 0;
  }

  .process-step__marker {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, #bf5af2 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    box-shadow: 0 0 0 4px #09090b; /* Match page bg color for cutout */
    position: relative;
    z-index: 2;
  }

  /* Target the body for Glass Style */
  .process-step__body {
    flex: 1;
    /* Glass Panel Mixin via Class in HTML, but here we enforce specificity if needed */
    /* The HTML class will handle it, just removing conflicting styles */
    padding: 1.5rem;
    margin-top: -0.25rem; /* Optical alignment with marker */
  }

  .process-step__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.75rem;
  }

  .process-step__title {
    margin: 0;
    font-size: 1.25rem;
    color: #ffffff;
    font-weight: 700;
  }

  .process-step__duration {
    font-size: 0.75rem;
    font-weight: 600;
    color: #ffffff;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .process-step__content {
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.6;
  }

  .process-step__content :global(ul) {
    padding-left: 1.25rem;
    margin-bottom: 1rem;
  }
  
  .process-step__content :global(h4) {
      font-size: 1rem;
      margin-top: 1rem;
      margin-bottom: 0.5rem;
      color: #ffffff;
  }
  
  @media (max-width: 640px) {
    .process-step {
      flex-direction: column;
      gap: 1rem;
    }
    
    .process-step__marker {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1rem;
    }
    
    .process-step__body {
        margin-top: 0;
    }
  }
</style>
