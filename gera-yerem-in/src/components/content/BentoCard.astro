---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  colSpan?: 1 | 2 | 3;
  rowSpan?: 1 | 2;
  visualPosition?: "top" | "bottom" | "right" | "left" | "background";
}

const { 
    title, 
    subtitle, 
    class: className, 
    colSpan = 1, 
    rowSpan = 1,
    visualPosition = "top"
} = Astro.props;
---

<div class:list={[
    "bento-card", 
    `col-span-${colSpan}`, 
    `row-span-${rowSpan}`, 
    `visual-${visualPosition}`,
    className
]}>
    <div class="bento-card__visual">
        <slot name="visual" />
    </div>
    
    <div class="bento-card__content">
        <h3 class="bento-card__title">{title}</h3>
        {subtitle && <p class="bento-card__subtitle">{subtitle}</p>}
        <div class="bento-card__body">
            <slot />
        </div>
    </div>
</div>

<style>
    .bento-card {
        background: var(--color-surface); /* Will need to be refined for light/slate theme */
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-lg, 16px);
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    }

    /* Premium Hover State */
    .bento-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
        border-color: var(--color-accent-light);
    }

    .bento-card__content {
        padding: var(--space-8);
        flex: 1;
        display: flex;
        flex-direction: column;
        z-index: 2;
    }

    .bento-card__title {
        font-family: var(--font-heading); /* Fallback until inter-tight is loaded */
        font-size: var(--font-size-xl);
        font-weight: 700;
        margin-bottom: var(--space-2);
        color: var(--color-text);
        letter-spacing: -0.01em;
    }

    .bento-card__subtitle {
        color: var(--color-text-muted);
        font-size: var(--font-size-sm);
        margin-bottom: var(--space-4);
        font-weight: 500;
    }

    .bento-card__visual {
        background: var(--color-surface-alt, #f8fafc);
        position: relative;
        overflow: hidden;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Grid Spans (Desktop Only) */
    @media (min-width: 768px) {
        .col-span-2 { grid-column: span 2; }
        .col-span-3 { grid-column: span 3; }
        .row-span-2 { grid-row: span 2; }

        /* Layout Variations based on visualPosition */
        .visual-right {
            flex-direction: row-reverse;
        }
        .visual-right .bento-card__visual {
            width: 50%;
            min-height: auto;
        }
        .visual-right .bento-card__content {
            width: 50%;
            justify-content: center;
        }

        .visual-left {
            flex-direction: row;
        }
        .visual-left .bento-card__visual {
            width: 50%;
            min-height: auto;
        }
    }
</style>
