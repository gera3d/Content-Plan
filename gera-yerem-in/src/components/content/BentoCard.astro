---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  colSpan?: 1 | 2 | 3;
  rowSpan?: 1 | 2;
  visualPosition?: "top" | "bottom" | "right" | "left" | "background";
}

const { 
    title, 
    subtitle, 
    class: className, 
    colSpan = 1, 
    rowSpan = 1,
    visualPosition = "top"
} = Astro.props;
---

<div class:list={[
    "bento-card", 
    `col-span-${colSpan}`, 
    `row-span-${rowSpan}`, 
    `visual-${visualPosition}`,
    className
]}>
    <div class="bento-card__visual">
        <slot name="visual" />
    </div>
    
    <div class="bento-card__content">
        <h3 class="bento-card__title">{title}</h3>
        {subtitle && <p class="bento-card__subtitle">{subtitle}</p>}
        <div class="bento-card__body">
            <slot />
        </div>
    </div>
</div>

<style>
    .bento-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--border-radius-xl);
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        transition: all var(--transition-spring);
    }

    /* Premium Hover State */
    .bento-card:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-4px);
        box-shadow: 
            0 0 1px rgba(255, 255, 255, 0.2),
            0 24px 48px rgba(0, 0, 0, 0.6);
        border-color: rgba(255, 255, 255, 0.15);
    }

    .bento-card__content {
        padding: var(--space-xl);
        flex: 1;
        display: flex;
        flex-direction: column;
        z-index: 2;
    }

    .bento-card__title {
        font-family: var(--font-heading);
        font-size: var(--font-size-2xl);
        font-weight: 700;
        margin-bottom: var(--space-xs);
        color: var(--color-text);
        letter-spacing: -0.02em;
    }

    .bento-card__subtitle {
        color: var(--color-text); /* High contrast white */
        font-size: var(--font-size-lg);
        margin-bottom: var(--space-md);
        font-weight: 500;
        opacity: 0.9;
    }

    .bento-card__body {
        color: var(--color-text-muted);
        font-size: var(--font-size-base);
        line-height: 1.5;
    }

    .bento-card__visual {
        background: linear-gradient(135deg, #1d1d1f, #2d2d2d);
        position: relative;
        overflow: hidden;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Grid Spans (Desktop Only) */
    @media (min-width: 768px) {
        .col-span-2 { grid-column: span 2; }
        .col-span-3 { grid-column: span 3; }
        .row-span-2 { grid-row: span 2; }

        /* Layout Variations based on visualPosition */
        .visual-right {
            flex-direction: row-reverse;
        }
        .visual-right .bento-card__visual {
            width: 50%;
            min-height: auto;
        }
        .visual-right .bento-card__content {
            width: 50%;
            justify-content: center;
        }

        .visual-left {
            flex-direction: row;
        }
        .visual-left .bento-card__visual {
            width: 50%;
            min-height: auto;
        }
    }
</style>
