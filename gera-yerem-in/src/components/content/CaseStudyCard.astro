---
interface Props {
  title: string;
  subtitle?: string;
  investment: string;
  timeline: string;
  roi: string;
  breakEven: string;
  logo?: string;
}

const { title, subtitle, investment, timeline, roi, breakEven, logo } = Astro.props;
---

<article class="glass-card case-study">
  <div class="case-study-header">
    <div class="header-content">
      <h3>{title}</h3>
      {subtitle && <p class="subtitle">{subtitle}</p>}
    </div>
    {logo && (
      <div class="logo-container">
        <img src={logo} alt="" class="company-logo" />
      </div>
    )}
  </div>

  <div class="stats-grid">
    <div class="stat-box">
      <span class="stat-label">Investment</span>
      <span class="stat-value text-white">{investment}</span>
    </div>
    <div class="stat-box">
      <span class="stat-label">Timeline</span>
      <span class="stat-value text-white">{timeline}</span>
    </div>
    <div class="stat-box">
      <span class="stat-label">ROI</span>
      <span class="stat-value text-gradient">{roi}</span>
    </div>
    <div class="stat-box">
      <span class="stat-label">Break-even</span>
      <span class="stat-value text-white">{breakEven}</span>
    </div>
  </div>

  <div class="case-content">
    <slot />
  </div>
</article>

<style>
  .case-study {
    /* Glass card handled by global utility, ensuring local overrides if needed */
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Header */
  .case-study-header {
    background: rgba(255, 255, 255, 0.02);
    padding: var(--space-6);
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
  }

  .header-content {
    flex: 1;
  }

  .logo-container {
    flex-shrink: 0;
  }

  .company-logo {
    max-height: 48px;
    max-width: 120px;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 6px;
    /* In dark mode, logos often need a white background or inversion.
       For now, we add a subtle white BG to ensure visibility */
    background: rgba(255,255,255,0.9);
    padding: 4px;
    box-shadow: 0 0 10px rgba(0,0,0,0.5);
  }

  .case-study-header h3 {
    margin: 0;
    color: var(--color-text);
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }

  .subtitle {
    margin: 0.35rem 0 0 0;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    font-weight: 500;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    border-bottom: 1px solid var(--color-border);
    /* background: rgba(0,0,0,0.2); Removed to keep it clean */
  }

  .stat-box {
    padding: var(--space-4) var(--space-2);
    text-align: center;
    border-right: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 4px;
  }

  .stat-box:last-child {
    border-right: none;
  }

  .stat-label {
    display: block;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-tertiary);
    font-weight: 600;
  }

  .stat-value {
    display: block;
    font-size: 0.95rem;
    line-height: 1.2;
  }

  /* Content Area */
  .case-content {
    padding: var(--space-8) var(--space-6);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--color-text-muted); /* Muted by default, white highlights handled in global */
    flex: 1;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .stat-box:nth-child(2) {
      border-right: none;
    }
    
    .stat-box:nth-child(1),
    .stat-box:nth-child(2) {
      border-bottom: 1px solid var(--color-border);
    }
  }

  @media (max-width: 640px) {
    .case-study-header {
      padding: var(--space-4);
      flex-direction: column-reverse;
      align-items: flex-start;
    }

    .logo-container {
        margin-bottom: var(--space-2);
    }

    .case-content {
      padding: var(--space-4);
    }
  }
</style>

<!-- Global styles for slotted content -->
<style is:global>
  /* Typography for case study content */
  .case-content p {
    margin-bottom: 1rem;
  }

  .case-content p:last-of-type {
    margin-bottom: 0;
  }

  /* Section labels */
  .case-content p strong:first-child {
    color: var(--color-text); /* White */
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  /* Body text in paragraphs */
  .case-content p {
    color: var(--color-text-muted);
  }

  /* Results list - compact bullet style */
  .case-content ul {
    margin: 0.75rem 0 0 0;
    padding: 0 0 0 1.25rem;
    list-style: disc;
  }

  .case-content li {
    padding: 0.25rem 0;
    position: relative;
    line-height: 1.5;
    color: var(--color-text-muted);
  }

  .case-content li::marker {
    color: var(--color-accent);
  }

  /* Result/Impact labels in list items */
  .case-content li strong {
    color: var(--color-accent);
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    margin-bottom: 4px;
  }

  /* White highlights */
  .case-content mark {
      background: none;
      color: var(--color-text);
      font-weight: 700;
      padding: 0;
  }
</style>
