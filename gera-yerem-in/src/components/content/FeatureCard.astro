---
const { title } = Astro.props;
const hasIcon = Astro.slots.has('icon');
---

<div class="feature-card">
  {hasIcon && (
    <div class="feature-card__icon-wrapper">
      <slot name="icon" />
    </div>
  )}
  <h4 class="feature-card__title">{title}</h4>
  <div class="feature-card__content">
    <slot />
  </div>
</div>

<style>
  .feature-card {
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-spring);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .feature-card:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-4px);
    box-shadow: 
      0 0 1px rgba(255, 255, 255, 0.15),
      0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .feature-card__icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: white;
    border-radius: 12px;
    margin-bottom: var(--space-md);
    font-size: 24px;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .feature-card:hover .feature-card__icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }
  
  .feature-card__icon-wrapper :global(svg) {
    width: 24px;
    height: 24px;
    stroke: currentColor;
    stroke-width: 2;
  }

  .feature-card__title {
    margin: 0 0 var(--space-sm) 0;
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-text);
  }

  .feature-card__content {
    color: var(--color-text-muted);
    font-size: var(--font-size-base);
    line-height: 1.6;
  }

  .feature-card__content :global(ul) {
    padding-left: 1.25rem;
    margin: 0 0 1rem 0;
  }
  
  .feature-card__content :global(li) {
    margin-bottom: 0.5rem;
  }

  .feature-card__content :global(mark) {
    background: rgba(41, 151, 255, 0.2);
    color: var(--color-accent);
    padding: 0.1em 0.2em;
    border-radius: 2px;
  }
</style>
