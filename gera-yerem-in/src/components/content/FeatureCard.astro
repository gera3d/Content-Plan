---
const { title } = Astro.props;
const hasIcon = Astro.slots.has('icon');
---

<div class="feature-card">
  {hasIcon && (
    <div class="feature-card__icon-wrapper">
      <slot name="icon" />
    </div>
  )}
  <h4 class="feature-card__title">{title}</h4>
  <div class="feature-card__content">
    <slot />
  </div>
</div>

<style>
  .feature-card {
    background-color: var(--color-accent-light); /* Lighter primary background */
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: 2rem; /* Increased padding */
    transition: all 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); /* Subtle shadow default */
  }

  .feature-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
  }

  .feature-card__icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff; /* White background for contrast against card */
    color: var(--color-accent);
    border-radius: 8px;
    margin-bottom: 1.25rem;
  }
  
  .feature-card__icon-wrapper :global(svg) {
    width: 24px;
    height: 24px;
    stroke: currentColor;
  }

  .feature-card__title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem; /* Larger title */
    font-weight: 700;
    color: #1e293b; /* Darker title */
  }

  .feature-card__content {
    color: #334155; /* Darker text (was muted) */
    font-size: 1rem;
    line-height: 1.6;
  }

  .feature-card__content :global(ul) {
    padding-left: 1.25rem;
    margin: 0 0 1rem 0;
  }
  
  .feature-card__content :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Make mark look better inside card */
  .feature-card__content :global(mark) {
    background: #fef08a; /* Yellow-200 */
    padding: 0.1em 0.2em;
    border-radius: 2px;
  }
</style>
