---
const { titleLeft, titleRight } = Astro.props;
---

<div class="comparison-columns">
  <div class="column glass-card">
    {titleLeft && <h3 class="column-title text-gradient">{titleLeft}</h3>}
    <div class="column-content">
      <slot name="left" />
    </div>
  </div>
  <div class="column glass-card">
    {titleRight && <h3 class="column-title text-white">{titleRight}</h3>}
    <div class="column-content">
      <slot name="right" />
    </div>
  </div>
</div>

<style>
  .comparison-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 3rem 0;
  }

  .column {
    padding: 2.5rem; /* Increased padding */
    height: 100%;
  }

  .column-title {
    margin-top: 0;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .comparison-columns {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  /* Scoped styles for lists inside columns */
  .column-content :global(ul) {
    padding-left: 0;
    list-style: none;
  }

  .column-content :global(li) {
    position: relative;
    padding-left: 1.75rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
  }
  
  .column-content :global(strong) {
      color: #ffffff;
  }

  /* Custom bullet points */
  .column-content :global(li::before) {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
    font-size: 1.5rem;
    line-height: 1;
    top: -2px;
  }
</style>
