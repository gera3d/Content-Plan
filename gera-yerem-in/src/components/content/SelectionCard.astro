---
const { step, title } = Astro.props;
---

<article class="selection-card">
  <div class="header">
    <div class="step-circle">{step}</div>
    <h3 class="title">{title}</h3>
  </div>
  <div class="card-content">
    <slot />
  </div>
</article>

<style>
  .selection-card {
    background: var(--color-accent-light);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .step-circle {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: #0f172a;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .title {
    margin: 0;
    font-size: 1.25rem;
    color: #1e293b;
    line-height: 1.3;
  }

  .card-content {
    color: #334155;
    line-height: 1.6;
  }

  /* Styling for nested lists and headers inside slot */
  .card-content :global(h4) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #0f172a;
    font-size: 1.1rem;
  }

  .card-content :global(ul) {
    padding-left: 1.25rem;
    margin-bottom: 1rem;
  }

  .card-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .card-content :global(p) {
    margin-bottom: 1rem;
  }
</style>
