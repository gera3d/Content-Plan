---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  showHeader?: boolean;
}

const { 
  title, 
  description = "I build custom software for businesses that have outgrown spreadsheets. Developer + Marketer.",
  image = "/images/gera-headshot.jpg",
  type = "website",
  publishedTime,
  modifiedTime,
  author = "Gera Yeremin",
  showHeader = true
} = Astro.props;

const siteUrl = "https://gera.yere.in";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = new URL(image, siteUrl).href;

// Person schema for structured data
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Gera Yeremin",
  "url": siteUrl,
  "jobTitle": "Software Developer & Digital Marketer",
  "description": "Developer + Marketer. I build custom software for businesses that have outgrown spreadsheets.",
  "sameAs": [
    "https://www.linkedin.com/in/gerayeremin",
    "https://github.com/gerayeremin",
    "https://twitter.com/gerayeremin"
  ]
};

// Website schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Gera Yeremin",
  "url": siteUrl,
  "description": description,
  "author": personSchema
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | Gera Yeremin</title>
    <meta name="title" content={`${title} | Gera Yeremin`} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Gera Yeremin" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    <meta property="twitter:creator" content="@gerayeremin" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Gera Yeremin" href="/rss.xml" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {type === 'website' && (
      <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
    )}
  </head>
  <body>
    {showHeader && <Header />}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
