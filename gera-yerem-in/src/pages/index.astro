---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureGrid from '../components/content/FeatureGrid.astro';
import FeatureCard from '../components/content/FeatureCard.astro';
import BlogCard from '../components/BlogCard.astro';
import CtaRow from '../components/content/CtaRow.astro';
import TestimonialSlider from '../components/content/TestimonialSlider.astro';
import LogoBar from '../components/content/LogoBar.astro';
import FeaturedCaseStudies from '../components/content/FeaturedCaseStudies.astro';
import WhoIWorkWith from '../components/content/WhoIWorkWith.astro';
import AboutBio from '../components/content/AboutBio.astro';
import BentoGrid from '../components/content/BentoGrid.astro';
import BentoCard from '../components/content/BentoCard.astro';
import MockupDashboard from '../components/visuals/MockupDashboard.astro';
import MockupPortal from '../components/visuals/MockupPortal.astro';
import MockupPipeline from '../components/visuals/MockupPipeline.astro';
import MockupContentPool from '../components/visuals/MockupContentPool.astro';
import HeroImage from '../components/visuals/HeroImage.astro';
import StatsBar from '../components/content/StatsBar.astro';
import ScrollIndicator from '../components/visuals/ScrollIndicator.astro';

---

<BaseLayout 
  title="Home" 
  description="Stop manually copying data. Start building assets. I build custom software for businesses that have outgrown spreadsheets."
>
  <!-- Hero Section: Apple Style -->
  <section class="hero">
    <div class="hero__content">
      <p class="hero__eyebrow">Custom Business Software</p>
      <h1 class="hero__headline">
        Stop manually copying data.<br/>
        Start building <span class="gradient-text">assets</span>.
      </h1>
      <p class="hero__subhead">
        Custom software for businesses that have outgrown spreadsheets.
      </p>
      <div class="hero__actions">
        <a href="/contact" class="btn btn-primary">See How It Works</a>
        <a href="/work" class="btn btn-ghost">View Case Studies</a>
      </div>
    </div>

    <div class="hero__visual">
      <img src="/images/memes/meme-drake-build.png" alt="Drake pointing to custom software" />
    </div>
    
    <ScrollIndicator />
  </section>


  <!-- Cost of Chaos: Apple Bento -->
  <section class="chaos-section">
    <div class="container animate-on-scroll">
      <p class="section-eyebrow">The Cost of Chaos</p>
      <h2 class="section-headline">
        These problems cost you <span class="text-gradient">money</span>.<br/>
        <span class="text-muted">Every. Single. Week.</span>
      </h2>
      
      <div class="chaos-grid stagger">
        <div class="chaos-card chaos-card--tall">
          <div class="chaos-card__icon">üìä</div>
          <h3>Scattered Data</h3>
          <p>Sales in one place, customers in another. You can't answer basic questions without <span class="text-white">digging for 20 minutes</span>.</p>
        </div>
        
        <div class="chaos-card">
          <div class="chaos-card__icon">‚è±Ô∏è</div>
          <h3>Expensive Busywork</h3>
          <p>$50/hour labor doing <span class="text-white">$10/hour work</span>.</p>
        </div>
        
        <div class="chaos-card">
          <div class="chaos-card__icon">üîë</div>
          <h3>The Sarah Problem</h3>
          <p>Only <span class="text-white">one person</span> knows the system.</p>
        </div>
        
        <div class="chaos-card">
          <div class="chaos-card__icon">üîß</div>
          <h3>Death by 1,000 Tools</h3>
          <p>8 apps that <span class="text-white">don't talk</span> to each other.</p>
        </div>
        
        <div class="chaos-card">
          <div class="chaos-card__icon">üîå</div>
          <h3>Bottleneck Central</h3>
          <p>Nothing moves unless <span class="text-white">you push it</span>.</p>
        </div>
        
        <div class="chaos-card chaos-card--wide">
          <div class="chaos-card__icon">üéØ</div>
          <h3>Gut Decisions</h3>
          <p>You're making $50K decisions based on instinct. That's <span class="text-white">gambling</span>, not strategy.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- The Guide: Who I Work With (Qualifier) -->
  <WhoIWorkWith />

  <!-- The Plan: What I Build -->
  <section class="section">
    <div class="container animate-on-scroll">
      <h2 class="section-title text-center mb-12">What I <span class="text-gradient">Do</span></h2>
      <BentoGrid>
          <!-- Card 1: Operations Platform (Large) -->
          <BentoCard 
              title="Custom Operations Platforms" 
              subtitle="Stop reacting. Start orchestrating."
              colSpan={2}
              visualPosition="right"
          >
              <div slot="visual" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                  <MockupDashboard />
              </div>
              <p>Replace 20 scattered spreadsheets with <span class="text-white">one dashboard</span> that tells you the truth about your business.</p>
          </BentoCard>

          <!-- Card 2: Client Portals (Tall) -->
          <BentoCard 
              title="Client Portals" 
              subtitle="Premium experience."
              rowSpan={2}
              visualPosition="top"
          >
              <div slot="visual" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; padding: 2rem;">
                  <MockupPortal />
              </div>
              <p>Give your customers a white-labeled login to check status and approve quotes. Establish <span class="text-white">instant trust</span>.</p>
          </BentoCard>

          <!-- Card 3: Workflow Automation (Small) -->
          <BentoCard 
              title="Workflow Automation" 
              subtitle="Zero human error."
              visualPosition="bottom"
          >
              <div slot="visual">
                  <MockupPipeline />
              </div>
              <p>Lead routing, invoice generation, and status updates happen <span class="text-white">while you sleep</span>.</p>
          </BentoCard>

          <!-- Card 4: Content Pool Creation -->
          <BentoCard 
              title="Content Pool Creation" 
              subtitle="Never run out of ideas."
              colSpan={1}
              visualPosition="bottom"
          >
              <div slot="visual" style="width: 100%; height: 100%;">
                  <MockupContentPool />
              </div>
              <p>Turn raw ideas and assets into an <span class="text-white">infinite well</span> of content ready for distribution.</p>
          </BentoCard>
      </BentoGrid>
    </div>
  </section>

  <!-- The Guide: About Bio -->
  <AboutBio />

  <!-- The Guide: Credibility (Stats + LogoBar) -->
  <section class="section">
    <div class="container skin-guide animate-on-scroll">
        <div class="guide-content text-center" style="max-width: 800px; margin: 0 auto;">
             <!-- Quick Stats -->
            <div class="stats-grid mb-12">
                <div class="stat-item">
                    <span class="stat-number">15+</span>
                    <span class="stat-label">Years Exp</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">50+</span>
                    <span class="stat-label">Happy Clients</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">10x</span>
                    <span class="stat-label">Avg ROI</span>
                </div>
            </div>
            
             <LogoBar />
        </div>
    </div>
  </section>

  <!-- The Process: Simple 3-Step -->
  <section class="section section--alt">
    <div class="container text-center animate-on-scroll">
        <h2 class="section-title mb-12">Simple Process. <span class="text-gradient">Tangible Results.</span></h2>
        <div class="process-grid">
            <div class="process-step">
                <div class="step-number">01</div>
                <h3 class="step-title">Discovery</h3>
                <p class="text-muted">We map out your exact workflow. <span class="text-white">No sales pitch</span>, just strategy.</p>
            </div>
            <div class="process-step">
                <div class="step-number">02</div>
                <h3 class="step-title">Build</h3>
                <p class="text-muted">I deliver a custom solution designed for your specific needs. <span class="text-white">No bloat</span>.</p>
            </div>
            <div class="process-step">
                <div class="step-number">03</div>
                <h3 class="step-title">Launch</h3>
                <p class="text-muted">You get a system that works from day one. Your team gets their <span class="text-white">time back</span>.</p>
            </div>
        </div>
    </div>
  </section>

  <!-- Social Proof: Carousel -->
  <section class="section">
    <div class="container animate-on-scroll">
      <h2 class="section-title text-center mb-12">Trusted by <span class="text-gradient">Leaders</span></h2>
      
      <TestimonialSlider count={6} />

    </div>
  </section>

    </div>
  </section>

  <!-- Recent Work Teaser -->
  <section class="section section--alt">
    <div class="container animate-on-scroll">
        <h2 class="section-title text-center mb-8">Selected <span class="text-gradient">Work</span></h2>
        <p class="text-center text-muted mb-12" style="max-width: 600px; margin: 0 auto;">
            Recent projects delivering measurable operational efficiency. From replacing spreadsheets to building full-scale operations platforms.
        </p>

        <FeaturedCaseStudies />

        <div class="text-center mt-12">
            <CtaRow>
                <a href="/work" class="btn btn--secondary" style="width: auto; margin: 0 auto;">View Full Portfolio ‚Üí</a>
            </CtaRow>
        </div>
    </div>
  </section>

  <!-- Latest Writing -->
  <section class="section">
    <div class="container animate-on-scroll">
      <h2 class="section-title mb-8">Latest <span class="text-gradient">Strategy</span></h2>
      <div class="featured-grid">
          <BlogCard 
            title="Custom Business Software: The Complete Guide" 
            href="/custom-business-software-guide"
            topic="Software Development"
            image="/images/memes/meme-morpheus-excel.png"
          />
          <BlogCard 
            title="Custom Workflow Automation: When You've Outgrown Zapier" 
            href="/custom-workflow-automation-guide"
            topic="Workflow Automation"
            image="/images/memes/meme-afraid-zap-failed.png"
          />
      </div>
      
      <p class="text-center mb-4" style="margin-top: var(--space-8);">
        <a href="/">Browse all posts ‚Üí</a>
      </p>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section section--alt text-center">
    <div class="container animate-on-scroll" style="max-width: 600px;">
        <h2 class="section-title mb-6">Ready to build something <span class="text-gradient">better</span>?</h2>
        <p class="text-xl text-muted mb-8">
            Let's talk about your situation. No sales pressure, just honest advice on whether custom software is the right move for you.
        </p>
        <a href="/contact" class="btn btn--primary">Book a 30-Minute Chat</a>
    </div>
  </section>

<style>
    /* Hero Styles */
    .hero {
        min-height: 100vh;
        padding: 10vh 0 8vh;
        display: flex;
        align-items: center;
        background: radial-gradient(ellipse at 70% 30%, rgba(99,102,241,0.05) 0%, transparent 60%);
    }

    .hero .container {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 4rem;
        align-items: center;
        max-width: 1400px;
    }

    .hero__content {
        text-align: left;
    }

    .hero__title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        line-height: 1.05;
        margin-bottom: var(--space-6);
        color: var(--color-text);
        letter-spacing: -0.04em;
        text-shadow: 0 4px 8px rgba(0,0,0,0.08);
        animation: fadeUp 0.6s ease-out both;
    }

    .text-gradient {
        color: var(--color-accent);
        background: linear-gradient(135deg, var(--color-accent) 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 2px 8px rgba(99,102,241,0.25));
    }

    /* Apple Hero Styles */
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: left; /* Changed from center */
        background: var(--color-bg);
        padding: 0 var(--space-lg);
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            ellipse 80% 60% at 50% 40%,
            rgba(41, 151, 255, 0.12) 0%,
            transparent 60%
        );
        pointer-events: none;
    }

    .hero__content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        width: 100%; /* Ensure full width for left align */
    }

    .hero__eyebrow {
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-text-tertiary);
        margin-bottom: var(--space-md);
        animation: fadeUp 0.6s ease-out both;
    }

    .hero__headline {
        font-size: var(--font-size-hero);
        font-weight: 700;
        letter-spacing: -0.03em;
        line-height: var(--line-height-tight);
        color: var(--color-text);
        margin-bottom: var(--space-lg);
        animation: fadeUp 0.6s ease-out 0.1s both;
    }

    .hero__subhead {
        font-size: clamp(18px, 2.5vw, 24px);
        color: var(--color-text-muted);
        max-width: 600px;
        margin: 0 0 var(--space-xl) 0; /* Left align margin */
        line-height: 1.5;
        animation: fadeUp 0.6s ease-out 0.2s both;
    }

    .hero__actions {
        display: flex;
        gap: var(--space-lg);
        justify-content: flex-start; /* Left align */
        flex-wrap: wrap;
        animation: fadeUp 0.6s ease-out 0.3s both;
    }

    /* Entrance Animation */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Chaos Section ‚Äî Apple Bento Grid */
    .chaos-section {
        padding: var(--space-4xl) 0;
        background: var(--color-bg);
    }

    .chaos-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(180px, auto);
        gap: var(--space-md);
        max-width: 1200px;
        margin: 0 auto;
    }

    .chaos-card {
        background: rgba(255, 255, 255, 0.04);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-xl);
        padding: var(--space-xl);
        transition: all var(--transition-spring);
    }

    .chaos-card:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-4px);
        box-shadow: 
            0 0 1px rgba(255, 255, 255, 0.15),
            0 20px 40px rgba(0, 0, 0, 0.5);
    }

    .chaos-card--tall {
        grid-row: span 2;
    }

    .chaos-card--wide {
        grid-column: span 3;
    }

    .chaos-card__icon {
        font-size: 40px;
        margin-bottom: var(--space-md);
    }

    .chaos-card h3 {
        font-size: var(--font-size-xl);
        font-weight: 700;
        color: var(--color-text);
        margin-bottom: var(--space-sm);
    }

    .chaos-card p {
        font-size: var(--font-size-base);
        color: var(--color-text-muted);
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .chaos-grid {
            grid-template-columns: 1fr;
        }
        .chaos-card--tall,
        .chaos-card--wide {
            grid-row: auto;
            grid-column: auto;
        }
    }

    /* CTA Button Polish */
    .cta-row {
        animation: fadeUp 0.6s ease-out 0.2s both;
    }
    
    /* Removed duplicative local button styles - using Global CSS .btn classes */

    /* Featured Blog Grid */
    .featured-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-8);
    }

    @media (max-width: 768px) {
        .hero {
             min-height: auto;
             padding: 8rem var(--space-6) 4rem; /* Added horizontal padding */
        }

        .hero__content {
            margin: 0;
            text-align: left;
        }

        .hero__title {
            font-size: clamp(2rem, 6vw, 3rem);
        }

        .hero__subtitle {
            max-width: 100%;
        }

        .featured-grid {
            grid-template-columns: 1fr;
        }

        .cta-row {
            flex-direction: column;
            gap: 1rem;
        }
    }

    /* Skin: Problem Section (Visual Distinctiveness) */
    .skin-problem {
        background-color: var(--color-surface-alt, #f8fafc);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius);
        padding: var(--space-8);
        margin-top: var(--space-4);
    }
    
    /* Stats Grid */
    .stats-grid {
        display: flex;
        justify-content: center;
        gap: var(--space-12);
        margin-top: var(--space-8);
    }
    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .stat-number {
        font-size: var(--font-size-3xl);
        font-weight: 800;
        color: var(--color-accent);
    }
    .stat-label {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-text-muted);
        font-weight: 600;
    }

    /* Process Grid - Apple Style */
    .process-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-md);
        margin-top: var(--space-xl);
    }
    .process-step {
        text-align: center;
        padding: var(--space-xl);
        background: rgba(255, 255, 255, 0.04);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-xl);
        transition: all var(--transition-spring);
    }
    .process-step:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-4px);
    }
    /* Number styling - Apple blue accent */
    .step-number {
        font-size: 3rem;
        font-weight: 900;
        color: var(--color-accent);
        line-height: 1;
        margin-bottom: var(--space-md);
        letter-spacing: -0.02em;
    }
    .step-title {
        font-size: var(--font-size-lg);
        font-weight: 700;
        margin-bottom: var(--space-sm);
        color: var(--color-text);
    }

    @media (max-width: 768px) {
        .stats-grid { gap: var(--space-6); }
        .stat-number { font-size: var(--font-size-2xl); }
        .process-grid { grid-template-columns: 1fr; }
    }
</style>
