---
import BaseLayout from '../layouts/BaseLayout.astro';

const caseStudies = [
  {
    title: 'Regional Real Estate Brokerage',
    problem: "Using Salesforce at $18K/year. Agents hated it—too complex, missing key features for real estate.",
    solution: "Custom CRM with MLS integration, mobile app for agents, automated follow-up sequences.",
    results: [
      "Saved $18K/year (no more Salesforce)",
      "Agent productivity up 30%",
      "40% increase in closed transactions",
      "ROI: 289% in first year"
    ],
    quote: "Our agents actually USE it because it makes their job easier, not harder."
  },
  {
    title: 'Medical Practice (3 Locations)',
    problem: "Patient reviews scattered across platforms. No system for requesting reviews. Reputation management was manual and inconsistent.",
    solution: "Automated review request system with email + SMS. Centralized dashboard for all platforms. Integration with practice management software.",
    results: [
      "Generated 500+ new reviews",
      "Rating increased from 3.9 to 4.8 stars",
      "New patient inquiries up 45%",
      "Staff time reduced: 10 hours/week → 1 hour/week"
    ],
    quote: "We tried Birdeye and Podium—spent $8K with mediocre results. Our custom system cost less and works infinitely better."
  },
  {
    title: 'Marketing Agency (60 Clients)',
    problem: "Client reporting extremely manual—8-10 hours per client/month. Data scattered across 8+ platforms.",
    solution: "Automated data aggregation from all platforms. Real-time client dashboards. Automated monthly report generation.",
    results: [
      "Reporting time: 10 hours → 30 minutes per client",
      "570 hours/month saved",
      "Added 15 new clients (25% growth)",
      "Client retention improved: 89% → 96%"
    ],
    quote: "This was the best business decision we've made. The time saved went directly into growing the business."
  }
];
---

<BaseLayout 
  title="Work" 
  description="Custom software projects that made real impact. Real results, real numbers, real businesses."
>
  <div class="page">
    <div class="container">
      <header class="page__header">
        <h1 class="page__title">Work</h1>
        <p class="page__description">
          Real projects. Real results. Here's what custom software can do when it's built right.
        </p>
      </header>

      <div class="posts-list">
        {caseStudies.map(study => (
          <article class="case-study">
            <h2>{study.title}</h2>
            
            <div style="margin-bottom: var(--space-4);">
              <strong>The Problem:</strong>
              <p class="text-muted">{study.problem}</p>
            </div>
            
            <div style="margin-bottom: var(--space-4);">
              <strong>What I Built:</strong>
              <p class="text-muted">{study.solution}</p>
            </div>
            
            <div style="margin-bottom: var(--space-4);">
              <strong>The Results:</strong>
              <ul style="margin-top: var(--space-2);">
                {study.results.map(result => (
                  <li>{result}</li>
                ))}
              </ul>
            </div>
            
            <blockquote style="border-left: 3px solid var(--color-accent); padding-left: var(--space-4); margin: var(--space-6) 0; font-style: italic; color: var(--color-text-muted);">
              "{study.quote}"
            </blockquote>
          </article>
        ))}
      </div>

      <div style="margin-top: var(--space-12); padding: var(--space-8); background: var(--color-background-alt); border-radius: var(--border-radius);">
        <h2 class="mb-4">Ready to talk about your project?</h2>
        <p class="text-muted mb-8">
          Every project starts with a conversation. No pitch—just figuring out if we're a good fit.
        </p>
        <a href="/contact" class="btn btn--primary">Schedule a call</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .case-study {
    padding: var(--space-8);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }
  
  .case-study h2 {
    margin-bottom: var(--space-6);
  }
</style>
